<Window x:Class="CoffeeShop.OrderManagementPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Orders" Height="800" Width="1200">
    <Window.Background>
        <ImageBrush ImageSource="/Assests/background-about.jpg"/>
    </Window.Background>
    <Grid>
        <!-- Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Box -->
        <Border Background="#3EF3F2F0" Margin="10,10,10,10" CornerRadius="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <!-- Title -->
                <TextBlock Text="Manage Orders" FontSize="24" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,-14,10,18"/>
            </StackPanel>
        </Border>

        <!-- Navigation Panel (Left Center) -->
        <Grid Width="220" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Row="1">
            <StackPanel Background="#3E2723B3" VerticalAlignment="Center" Margin="10">
                <Button Content="Manage Menu" HorizontalAlignment="Stretch" Height="50" Click="NavigateToMenuManagement" Margin="5,-4,5,5" Background="#3E2723" Foreground="White" FontSize="16"/>
                <Button Content="Manage Orders" HorizontalAlignment="Stretch" Height="50" Click="NavigateToOrderManagement" Margin="5" Background="#3E2723" Foreground="White" FontSize="16"/>
                <Button Content="Manage Customers" HorizontalAlignment="Stretch" Height="50" Click="NavigateToCustomerManagement" Margin="5" Background="#3E2723" Foreground="White" FontSize="16"/>
                <Button Content="Logout" HorizontalAlignment="Stretch" Height="50" Click="Logout" Margin="5" Background="#3E2723" Foreground="White" FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area for Order Management -->
        <Grid Margin="240,0,10,10" Grid.Row="1">
            <StackPanel Margin="10">
                <!-- Orders List Section -->
                <TextBlock Text="Customer Orders" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <ListView x:Name="OrdersListView" Background="#ffffff" BorderBrush="#3E2723" BorderThickness="1" Height="500" Width="900">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Order ID" Width="100" DisplayMemberBinding="{Binding OrderID}"/>
                            <GridViewColumn Header="Customer Name" Width="200" DisplayMemberBinding="{Binding CustomerName}"/>
                            <GridViewColumn Header="Items" Width="300" DisplayMemberBinding="{Binding Items}"/>
                            <GridViewColumn Header="Total Price" Width="150" DisplayMemberBinding="{Binding TotalPrice}"/>
                            <GridViewColumn Header="Status" Width="150" DisplayMemberBinding="{Binding Status}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Update Order Status Section -->
                <TextBlock Text="Update Order Status" FontSize="18" FontWeight="Bold" Foreground="#3E2723" Margin="0,20,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Order ID:" Foreground="Gray" Margin="0,0,10,0"/>
                    <TextBox x:Name="OrderIDInput" Width="100" Height="30" Margin="0,0,20,0"/>
                    <TextBlock Text="Status:" Foreground="Gray" Margin="0,0,10,0"/>
                    <ComboBox x:Name="OrderStatusComboBox" Width="150" Height="30">
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>
                </StackPanel>
                <Button Content="Update Status" Width="150" Height="30" Background="#3E2723" Foreground="White" FontSize="14" Click="UpdateOrderStatus"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
